<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jsampaio.veloguiaversao2.MapsActivityCorridaLivre">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Start"
            android:drawableLeft="@drawable/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_updates_button"
            android:onClick="startUpdatesButtonHandler" />

        <Button
            android:text="Stop"
            android:drawableLeft="@drawable/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_updates_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/stop_updates_button"
            android:onClick="stopUpdatesButtonHandler" />

        <Button
            android:text="GrÃ¡ficos"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/stop_updates_button"
            android:onClick="geraGraficosHandler" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="520dp">

        <TextView
            android:text="Ler Buffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/readBuffer2" />


    </LinearLayout>

    </fragment>
