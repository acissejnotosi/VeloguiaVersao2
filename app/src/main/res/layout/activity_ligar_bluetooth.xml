<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ligar_bluetooth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jsampaio.veloguiaversao2.LigarBluetooth"
    android:background="@drawable/wp_bdi_095">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/scan"
                android:background="@android:drawable/btn_default"
                android:text="Ligar Bluetooth" />

            <Button
                android:text="BTs Pairados"
                android:layout_width="match_parent"
                android:id="@+id/PairedBtn"

                android:background="@android:drawable/btn_default"
                android:layout_height="50dp"
                android:elevation="0dp"
                android:layout_weight="0.04" />

            <Button
                android:id="@+id/discover"
                android:background="@android:drawable/btn_default"
                android:text="Descobrir Dispositivos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.06" />

            <Button
                android:layout_height="50dp"
                android:id="@+id/off"

                android:layout_weight="0.02"
                android:background="@android:drawable/btn_default"
                android:text="Desligar Bluetooth"
                android:layout_width="match_parent" />


        <TextView
            android:text="Selecione o bluetooth da pulseira:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:textColor="@color/branco"
             />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:id="@+id/devicesListView"
            android:layout_weight="0.70"
            android:textColor="@color/branco"/>

        <TextView
            android:text="Status de ConexÃ£o"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:id="@+id/bluetoothStatus"
            android:textSize="18sp"
            android:textColor="@color/branco"
         />

        <Button
            android:text="Calibrar"
            android:drawableLeft="@drawable/hearticon"
            android:layout_width="match_parent"
            android:id="@+id/btnCalibrarSensor"
            android:layout_alignParentBottom="true"

            android:layout_height="wrap_content" />
        <Button
            android:text="Corrida Livre"
            android:layout_width="match_parent"
            android:id="@+id/btnProximo"

            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
